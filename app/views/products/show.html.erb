<div class="product show">
  <div class='content'>
    <h1 align="center"><%= @product.name %></h1>
    <ul>
      <% @product.tags.each do |tag| %>
        <li><%= tag.name %></li>
      <% end %>
    </ul>
    <p class='action'><%= @product.description %></p>
    <p class='date'><%= @product.created_at.strftime('%Y-%m-%d %H:%M') %></p>
    <p class='date'>Approx <%= per_day @product %> alerts per day</p>

    <% if current_user.admin %>
      <%= link_to "Edit this product", edit_product_path(@product) %> |
    <% end %>
    <%= link_to "Go to subscribing page", '/subscribe' %> |
    <%= link_to "Back to products listing", products_path %>
  </div>
</div>
