<div class='form product-actions'>
  <div class='wrapper'>
    <%= form_for(@product, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group name">
        <%= f.label :name %>
        <%= "<span class='error-msg'>#{@product.errors[:name].first}</span>".html_safe unless @product.errors[:name].empty? %>
        <%= f.text_field :name, onkeyup: "check('.name')", class: "#{'failed' unless @product.errors[:name].empty?}", autocomplete: "off" %>
      </div>
      <div class="form-group description">
        <%= f.label :description %>
        <%= "<span class='error-msg'>#{@product.errors[:description].first}</span>".html_safe unless @product.errors[:description].empty? %>
        <%= f.text_area :description, onkeyup: "checkTextArea('.description')", class: "#{'failed' unless @product.errors[:description].empty?}", autocomplete: "off" %>
      </div>
      <!-- <div class="form-group">
        <%#= f.label :tags, class: 'up' %>
        <%#= f.select :tags, Tag.all.collect { |tag| tag.name }, { :multiple => true, include_blank: false, selected: @product.tags.collect { |tag| tag.name }}, class: "form-control", multiple: 'multiple', size: Tag.count > 5 ? 5 : Tag.count %>
      </div> -->
      <%= submit_tag (action_name == 'new' ? "Create product" : "Update product"), class: 'btn btn-primary btn-lg form-submit' %>
    <% end %>

    <%= link_to "Back to products listing", products_path, class: 'back' %>
  </div>
</div>
<script>pageReady();</script>
